<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_content" >

    <LinearLayout style="@style/layout_header" >

        <TextView
            android:id="@+id/title_overview_babymode"
            style="@style/fragmentTitle"
            android:text="@string/title_overview" >
        </TextView>
    </LinearLayout>

    <LinearLayout style="@style/layout_body" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/overview"
            android:layout_marginTop="@dimen/overview"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/overview_text_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_baby_mode_state" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/overview_active_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:contentDescription="@string/desc_img_default" />

                    <TextView
                        android:id="@+id/overview_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/overview_edit" >

                <ImageView
                    android:id="@+id/overview_edit_mode"
                    style="@style/overview_edit"
                    android:contentDescription="@string/desc_img_default" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/overview"
            android:layout_marginTop="@dimen/overview"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/overview_text_remote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_connected_device" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/overview_online_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="8dp"
                        android:src="@android:drawable/presence_online" />

                    <TextView
                        android:id="@+id/overview_remote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/overview_edit" >

                <ImageView
                    android:id="@+id/overview_delete_remote"
                    style="@style/overview_edit"
                    android:contentDescription="@string/desc_img_default" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/overview"
            android:layout_marginTop="@dimen/overview"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/overview_text_connectivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_text_connectivity" />

                <TextView
                    android:id="@+id/overview_connectivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/overview_edit" >

                <ImageView
                    android:id="@+id/overview_edit_connectivity"
                    style="@style/overview_edit"
                    android:contentDescription="@string/desc_img_default"
                    android:src="@android:drawable/ic_menu_edit" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/overview"
            android:layout_marginTop="@dimen/overview"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/overview_text_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_title_call" />

                <TextView
                    android:id="@+id/overview_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nicht informieren" />
            </LinearLayout>

            <LinearLayout style="@style/overview_edit" >

                <ImageView
                    android:id="@+id/overview_edit_call"
                    style="@style/overview_edit"
                    android:contentDescription="@string/desc_img_default"
                    android:src="@android:drawable/ic_menu_edit" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/overview"
            android:layout_marginTop="@dimen/overview"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/overview_text_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_title_sms" />

                <TextView
                    android:id="@+id/overview_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="weiterleiten" />
            </LinearLayout>

            <LinearLayout style="@style/overview_edit" >

                <ImageView
                    android:id="@+id/overview_edit_sms"
                    style="@style/overview_edit"
                    android:contentDescription="@string/desc_img_default"
                    android:src="@android:drawable/ic_menu_edit" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/overview"
            android:layout_marginTop="@dimen/overview"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/overview_text_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview_password" />

                <TextView
                    android:id="@+id/overview_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout style="@style/overview_edit" >

                <ImageView
                    android:id="@+id/overview_edit_password"
                    style="@style/overview_edit"
                    android:contentDescription="@string/desc_img_default"
                    android:src="@android:drawable/ic_menu_rotate" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

</LinearLayout>