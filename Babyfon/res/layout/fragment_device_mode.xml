<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_baby_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/button_mode_baby" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:text="Schritt 1 von 3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_parent_mode"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="Wähle aus, welchen Modus du für dieses Gerät nutzen möchtest."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button_parent_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_baby_mode"
        android:layout_alignLeft="@+id/button_baby_mode"
        android:text="@string/button_mode_parents" />

</RelativeLayout>