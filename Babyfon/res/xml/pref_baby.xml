<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_baby_name"
        android:inputType="textCapWords"
        android:key="baby_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_name" />

    <ListPreference
        android:defaultValue="boy"
        android:entries="@array/pref_gender_list_titles"
        android:entryValues="@array/pref_gender_list_values"
        android:key="gender_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_gender" />

</PreferenceScreen>
